#!/bin/sh

set -eu

PKG_USER="grouprise"
DIR_ETC="/etc/grouprise"
DIR_BACKUPS="/var/backups/grouprise"

mkdir -p "$DIR_BACKUPS"
chown "$PKG_USER:root" "$DIR_BACKUPS"

if [ -f "/etc/uwsgi/apps-enabled/grouprise.ini" ]; then
    touch "$DIR_ETC/maintenance_mode"
    /usr/bin/stadtctl database_dump --prefix preinst_auto
fi

set +eu

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
